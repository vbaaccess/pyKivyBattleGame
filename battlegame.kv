            size: self.width, self. height
            pos: self.x, self. y
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        Label:
            text: "Battle Game"
            font_size: 18
            color: 0.23, 0.24, 0.35, 1
