#: include battleships.kv

<TheGame>:
    canvas.before:
        Color:
            rgb: (0.9, 0.9, 0.9)
        Rectangle:
            size: self.width, self. height
            pos: self.x, self. y
    cols: 1
    rows: 3
    GridLayout
        cols: 2
        size_hint: 1, 0.05
        Label:
            color: 0,0,0
            bold: True
            text: 'Player 1'
        Label:
            color: 0,0,0
            bold: True
            text: 'Player 2'
    GridLayout
        cols: 1
        size_hint: 1, 0.80
        BattleShips:
    GridLayout
        cols: 2
        size_hint: 1, 0.05
        TextInput:
            id: game_id
            multiline: False
            text: 'command'
        Button:
            text: 'START'
