#: include plane.kv

<BattleShips>:
    canvas.before:
        Color:
            rgb: (0.7, 0.7, 0.7)
        Rectangle:
            size: self.width, self. height
            pos: self.x, self. y
    cols: 1
    rows: 3
    GridLayout
        cols: 2
        size_hint: 1, 0.05
        Label:
            color: 0,0,0
            bold: True
            text: 'Player 1'
        Label:
            color: 0,0,0
            bold: True
            text: 'Player 2'
    GridLayout
        cols: 2
        size_hint: 1, 0.80
        Plane:
            id: player
        Plane:
            id: opponent
    GridLayout
        cols: 2
        size_hint: 1, 0.05
        TextInput:
            id: oid_gameTextInput
            multiline: False
            text: 'command'
        Button:
            id: oid_gameStartButton
            text: 'START'
            on_release: root.startButtonClick()